{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sh '{{.Path}}' {{user `user_password`}}",
      "override": {
        "digitalocean": {
          "scripts": [
            "scripts/setup_default_user.sh"
          ]
        },
        "docker": {
          "scripts": [
            "scripts/setup_default_user.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "scripts/setup_default_user.sh"
          ]
        },
        "virtualbox-iso": {
          "scripts": [
            "scripts/dummy.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/dummy.sh"
          ]
        }
      }
    },
    {
      "type": "file",
      "source": "{{user `config_file`}}",
      "destination": "/root/ok_config.rb"
    },
    {
      "environment_vars": [
        "GAMEESO_MODE='{{user `mode`}}'",
        "GAMEESO_USER_PASSWORD='{{user `user_password`}}'"
      ],
      "type": "shell",
      "execute_command": "echo '{{user `user_password`}}'|sudo -S {{ .Vars }} sh '{{.Path}}'",
      "scripts": [
        "scripts/install_openkit_server.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `user_password`}}'|sudo -S sh '{{.Path}}'",
      "override": {
        "docker": {
          "scripts": [
            "scripts/dummy.sh"
          ]
        },
        "digitalocean": {
          "scripts": [
            "scripts/setup_firewall.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "scripts/setup_firewall.sh"
          ]
        },
        "virtualbox-iso": {
          "scripts": [
            "scripts/setup_firewall.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/setup_firewall.sh"
          ]
        }
      }
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `user_password`}}'|sudo -S {{ .Vars }} sh '{{.Path}}'",
      "override": {
        "digitalocean": {
          "scripts": [
            "scripts/create_start_gameeso.sh"
          ]
        },
        "docker": {
          "scripts": [
            "scripts/create_start_gameeso.sh"
          ]
        },
        "amazon-ebs": {
          "scripts": [
            "scripts/create_start_gameeso.sh"
          ]
        },
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        },
        "vmware-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/vmware.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso", "vmware-iso"],
      "vagrantfile_template": "Vagrantfile",
      "override": {
        "virtualbox": {
          "output": "gameeso-on-ubuntu-14-04-x64-virtualbox.box"
        },
        "vmware": {
          "output": "gameeso-on-ubuntu-14-04-x64-vmware.box"
        }
      }
    }
  ],
  "variables": {
    "mode": "standalone",
    "digitalocean_client_id": "",
    "digitalocean_api_key": "",
    "amazon_access_key": "",
    "amazon_secret_key": "",
    "user_password": "gameeso",
    "config_file": "config/ok_config.sample.rb"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "gameeso_docker.tar"
    },
    {
      "type": "digitalocean",
      "client_id": "{{user `digitalocean_client_id`}}",
      "api_key": "{{user `digitalocean_api_key`}}",
      "image": "ubuntu-14-04-x64",
      "droplet_name": "GameesoServer-{{timestamp}}",
      "snapshot_name": "Gameeso Server {{timestamp}}"
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `amazon_access_key`}}",
      "secret_key": "{{user `amazon_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-ea11ef82",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "GameesoServer-{{timestamp}}"
    },
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_hostname=ubuntu-1404<wait>",
        " netcfg/get_domain=vagrantup.com<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
      "iso_checksum_type": "md5",
      "iso_url": "http://mirrors.mit.edu/ubuntu-releases/trusty/ubuntu-14.04-server-amd64.iso",
      "ssh_username": "gameeso",
      "ssh_password": "gameeso",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'gameeso'|sudo -S sh '/tmp/shutdown.sh'",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_hostname=ubuntu-1404<wait>",
        " netcfg/get_domain=vagrantup.com<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_os_type": "linux",
      "http_directory": "http",
      "iso_checksum": "01545fa976c8367b4f0d59169ac4866c",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04-server-amd64.iso",
      "ssh_username": "gameeso",
      "ssh_password": "gameeso",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > /tmp/shutdown.sh; echo 'gameeso'|sudo -S sh '/tmp/shutdown.sh'",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ]
}
